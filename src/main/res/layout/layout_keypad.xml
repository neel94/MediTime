<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
>

	<TableRow
		android:gravity="center"
		
	>		
		<Button android:id="@+id/btn_7"
			android:layout_width="@dimen/keypad_button_width"
			android:layout_height="@dimen/keypad_button_height"
			android:layout_margin="@dimen/keypad_button_margin"
			
			android:text="7"
			android:textAppearance="?android:attr/textAppearanceLarge"	
		/>
		
		<Button android:id="@+id/btn_8"
			android:layout_width="@dimen/keypad_button_width"
			android:layout_height="@dimen/keypad_button_height"
			android:layout_margin="@dimen/keypad_button_margin"
			
			android:text="8"
			android:textAppearance="?android:attr/textAppearanceLarge"	
		/>
		
		<Button android:id="@+id/btn_9"
			android:layout_width="@dimen/keypad_button_width"
			android:layout_height="@dimen/keypad_button_height"
			android:layout_margin="@dimen/keypad_button_margin"
			
			android:text="9"
			android:textAppearance="?android:attr/textAppearanceLarge"	
		/>		
	</TableRow>
	
	<TableRow
		android:gravity="center"
	>		
		<Button android:id="@+id/btn_4"
			android:layout_width="@dimen/keypad_button_width"
			android:layout_height="@dimen/keypad_button_height"
			android:layout_margin="@dimen/keypad_button_margin"
			
			android:text="4"
			android:textAppearance="?android:attr/textAppearanceLarge"	
		/>
		
		<Button android:id="@+id/btn_5"
			android:layout_width="@dimen/keypad_button_width"
			android:layout_height="@dimen/keypad_button_height"
			android:layout_margin="@dimen/keypad_button_margin"
			
			android:text="5"
			android:textAppearance="?android:attr/textAppearanceLarge"	
		/>
		
		<Button android:id="@+id/btn_6"
			android:layout_width="@dimen/keypad_button_width"
			android:layout_height="@dimen/keypad_button_height"
			android:layout_margin="@dimen/keypad_button_margin"
			
			android:text="6"
			android:textAppearance="?android:attr/textAppearanceLarge"	
		/>		
	</TableRow>
	
	<TableRow
		android:gravity="center"
	>		
		<Button android:id="@+id/btn_1"
			android:layout_width="@dimen/keypad_button_width"
			android:layout_height="@dimen/keypad_button_height"
			android:layout_margin="@dimen/keypad_button_margin"
			
			android:text="1"
			android:textAppearance="?android:attr/textAppearanceLarge"	
		/>
		
		<Button android:id="@+id/btn_2"
			android:layout_width="@dimen/keypad_button_width"
			android:layout_height="@dimen/keypad_button_height"
			android:layout_margin="@dimen/keypad_button_margin"
			
			android:text="2"
			android:textAppearance="?android:attr/textAppearanceLarge"	
		/>
		
		<Button android:id="@+id/btn_3"
			android:layout_width="@dimen/keypad_button_width"
			android:layout_height="@dimen/keypad_button_height"
			android:layout_margin="@dimen/keypad_button_margin"
			
			android:text="3"
			android:textAppearance="?android:attr/textAppearanceLarge"	
		/>		
	</TableRow>
	
	<TableRow
		android:gravity="center"
	>		
		<ImageButton android:id="@+id/btn_clear"
			android:layout_width="@dimen/keypad_button_width"
			android:layout_height="@dimen/keypad_button_height"
			android:layout_margin="@dimen/keypad_button_margin"
			
			android:src="@android:drawable/ic_menu_close_clear_cancel"
		/>	
		
		<Button android:id="@+id/btn_0"
			android:layout_width="@dimen/keypad_button_width"
			android:layout_height="@dimen/keypad_button_height"
			android:layout_margin="@dimen/keypad_button_margin"
			
			android:text="0"
			android:textAppearance="?android:attr/textAppearanceLarge"	
		/>
		
		<ImageButton android:id="@+id/btn_delete"
			android:layout_width="@dimen/keypad_button_width"
			android:layout_height="@dimen/keypad_button_height"
			android:layout_margin="@dimen/keypad_button_margin"
			
			android:src="@android:drawable/ic_input_delete"
		/>		
	</TableRow>
</TableLayout>
